#!/bin/bash

SESSIONNAME="script"
tmux has-session -t $SESSIONNAME &> /dev/null

if [ $? != 0 ]
 then
    tmux new-session -s $SESSIONNAME -n 3panes -d
    tmux split-window -v
    tmux split-window -h
    tmux send-keys -t $SESSIONNAME "~/GIT/tmux/tmux_session" C-m
    tmux new-window -t $SESSIONNAME:2 -n gazeboros
    tmux split-window -v
    tmux select-pane -t 0
    tmux split-window -h
    tmux split-window -h
    tmux select-pane -t 3
    tmux split-window -h
    tmux resize-pane -R 25
    tmux select-pane -t 1
    tmux resize-pane -L 15
    tmux select-pane -t 0
    tmux resize-pane -L 25
    tmux select-pane -t 2
    tmux resize-pane -R 20
    tmux select-pane -t 0
    tmux resize-pane -R 20

    tmux select-pane -t 0
    tmux send-keys "cd ~/GIT" C-m
    tmux select-pane -t 1
    tmux send-keys "cd ~/GIT" C-m
    tmux select-pane -t 2
    tmux send-keys "cd ~/GIT" C-m
    tmux select-pane -t 3
    tmux send-keys "cd ~/GIT" C-m
    tmux select-pane -t 4
    tmux send-keys "cd ~/GIT" C-m


    tmux new-window -t $SESSIONNAME:3 -n 4panes
    tmux split-window -v
    tmux split-window -h
    tmux select-pane -t 0
    tmux split-window -h
    tmux new-window -t $SESSIONNAME:4 -n 2panes
    tmux split-window -v


fi

tmux attach -t $SESSIONNAME
